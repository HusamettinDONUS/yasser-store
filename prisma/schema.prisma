generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication - simplified for admin only
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// NextAuth.js models removed - using simple session-based auth for admin

// Product model - simplified for showcase website

enum ProductCategory {
  MEN
  WOMEN
  KIDS
  ACCESSORIES
  JACKETS
}

enum ProductSize {
  XS
  S
  M
  L
  XL
  XXL
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  images      String   @default("[]") // JSON string storing Vercel Blob URLs
  category    ProductCategory
  sizes       String   @default("[]") // JSON string storing product sizes
  colors      String   @default("[]") // JSON string storing product colors
  stockQuantity Int
  inStock     Boolean
  featured    Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

